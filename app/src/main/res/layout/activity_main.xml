<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_dicmorse_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morse-Alfabeto"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_dicchar_morse"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_dicchar_morse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alfabeto-Morse"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_dicmorse_char"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_telatraduz"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="400dp"
            android:text="Tradutor"
            app:layout_constraintEnd_toStartOf="@+id/button_frases"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_dicmorse_char" />

        <Button
            android:id="@+id/button_frases"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="400dp"
            android:text="@string/frases_prontas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_telatraduz"
            app:layout_constraintTop_toBottomOf="@id/button_dicmorse_char" />

        <Button
            android:id="@+id/button_sms"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/enviar_sms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_telatraduz" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>