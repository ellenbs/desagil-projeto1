<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frases">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mensagem_fome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="350dp"
            android:text="● Estou com fome"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/mensagem_sede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="● Estou com sede"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/mensagem_fome"/>

        <TextView
            android:id="@+id/mensagem_dor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="● Estou com dor"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/mensagem_sede"/>

        <TextView
            android:id="@+id/mensagem_banheiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="● Quero ir ao banheiro"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/mensagem_dor"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
